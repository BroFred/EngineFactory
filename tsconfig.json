{
  "compilerOptions": {
    "jsx":"react",
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "rootDir": ".",
    "declaration": true,
    "sourceMap": true,
    "removeComments": true,
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@dashboard/*": [
        "@dashboard/*"
      ],
      "@example/*": [
        "example/*"
      ],
      "root": [
        "."
      ]
    }
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "**/node_modules",
    "**/build",
    "**/tests",
    "**/webpack"
  ]
}